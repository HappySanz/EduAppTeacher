<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@color/appColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_grey">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:layout_marginLeft="120sp"
            android:text="@string/class_t"
            android:textSize="20sp"
            android:textColor="@color/appColor" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230sp"
            android:layout_marginTop="-25sp"
            android:checked="true"
            android:theme="@style/MySwitchTheme"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="120sp"
            android:text="@string/homework"
            android:textSize="20sp"
            android:textColor="@color/appColor"/>


        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_homwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230sp"
            android:layout_marginTop="-25sp"
            android:theme="@style/MySwitchTheme"/>

        <TextView
            android:id="@+id/testdrop"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="40sp"
            android:background="@drawable/textcolorborder"
            android:hint="Class"
            android:textSize="20sp"
            android:gravity="left|center_vertical"
            android:padding="10sp"/>

        <TextView
            android:id="@+id/datedrop"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:layout_marginLeft="200sp"
            android:layout_marginTop="-40sp"
            android:background="@drawable/textcolorborder"
            android:hint="Date"
            android:textSize="20sp"
            android:gravity="left|center_vertical"
            android:padding="10sp"/>

        <TextView
            android:id="@+id/subjectdrop"
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:background="@drawable/textcolorborder"
            android:hint="Subject"
            android:textSize="20sp"
            android:gravity="left|center_vertical"
            android:padding="10sp"/>

    </LinearLayout>

</LinearLayout>