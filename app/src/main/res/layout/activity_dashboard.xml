<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e6e9">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/appColor">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:padding="4dp"
            android:background="@drawable/ic_navigation_drawer"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="MENU"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            android:textSize="22dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170sp"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:id="@+id/attendance"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="30sp"
            android:layout_gravity="center"

            android:background="@drawable/round_btn_plain">

            <ImageView
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_marginTop="2dp"
                android:background="@drawable/attendance"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attendance"
                android:paddingLeft="15sp"
                android:textSize="12sp"
                android:layout_marginTop="17dp"
                android:layout_below="@+id/imageView2"
                android:layout_alignRight="@+id/imageView2"
                android:layout_alignEnd="@+id/imageView2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/class_test"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="30sp"
            android:layout_gravity="center"
            android:background="@drawable/round_btn_plain">

            <ImageView
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/classtest"
                android:layout_alignParentTop="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/class_test"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="12dp"
                android:paddingLeft="2sp"
                android:textSize="12sp"
                android:layout_marginBottom="10dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/exam"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="30sp"
            android:layout_gravity="center"
            android:background="@drawable/round_btn_plain">

            <ImageView
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/exam"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exam"
                android:paddingLeft="12sp"
                android:textSize="12sp"
                android:layout_marginBottom="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/time_table"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="30sp"
            android:layout_gravity="center"
            android:background="@drawable/round_btn_plain">

            <ImageView
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:background="@drawable/timetable"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/imageView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_table"
                android:layout_alignParentBottom="true"
                android:paddingLeft="2sp"
                android:textSize="12sp"
                android:layout_marginBottom="15dp"
                android:layout_alignRight="@+id/imageView5"
                android:layout_alignEnd="@+id/imageView5" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170sp">

        <RelativeLayout
            android:id="@+id/events"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            android:background="@drawable/round_btn_plain">

            <ImageView
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:background="@drawable/events"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="35dp"
                android:paddingLeft="1sp"
                android:text="@string/events"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/communication"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="30sp"
            android:layout_gravity="center"
            android:background="@drawable/round_btn_plain">

            <ImageView
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:background="@drawable/communication"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/imageView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/communication"
                android:paddingLeft="4sp"
                android:textSize="12sp"
                android:layout_marginBottom="13dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>